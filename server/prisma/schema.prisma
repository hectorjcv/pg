// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// LOGS

model Logs {
  id          Int  @id @default(autoincrement())
  code        Int
  data        String
  description String
  url         String
  ci          String
}

// USUARIOS

model People {
  id                Int         @id @default(autoincrement())
  name              String 
  lastname          String
  ci                String
  password          String
  phone             String
  email             String
  session           Boolean     @default(false)
  last_session      DateTime?
  create            DateTime    @default(now())
  token             String?
  status            String
  role              String
}

// BIENES

model Objects {
  id                                Int             @id     @default(autoincrement())
  name                              String
  description                       String
  price                             Decimal
  quantity                          Int
  n_identification                  String
  estado                            String
  show_me                           Boolean               @default(true)
  creathe_by                        Int
  date_id                           Int                   @unique
  clasification_id                  Int
  quantity_id                       Int
  dep_id                            Int
}

model Dates_objects {
  id          Int         @id     @default(autoincrement())
  creathe     DateTime            @default(now())
  update      DateTime
  delete      DateTime
}

model Quantity_objects {
  id            Int       @id   @default(autoincrement())
  fisica        Int
  contable      Int
}

model Clasification_objects {
  id                    Int       @id   @default(autoincrement())
  group_id              Int
  sub_group_id          Int
  secction_id           Int
}

model Groups {
  id          Int       @id   @default(autoincrement())
  group       String
}

model Sub_groups {
  id              Int       @id   @default(autoincrement())
  sub_group       String
  group_id        Int
}

model Secction {
  id        Int       @id   @default(autoincrement())
  secction     String
}

// DEPARTAMENTOS
 
 model Departament {
  id                Int       @id   @default(autoincrement())
  departament_name  String
 }
